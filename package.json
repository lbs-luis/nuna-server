{
  "name": "nuna-server",
  "version": "1.0.0",
  "description": "Em quechua, \"Nuna\" significa alma ou espírito. Um nome que evoca o aspecto motivacional e o equilíbrio interior que seu aplicativo oferece.",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/http/server.js",
    "dev": "tsx watch --env-file .env ./src/http/server.ts",
    "build": "tsup src",
    "db:seed": "tsx --env-file .env ./src/db/seed.ts",
    "db:up": "npx drizzle-kit generate && npx drizzle-kit migrate"
  },
  "keywords": [
    "motivation",
    "habit-tracking",
    "balance",
    "spirit",
    "nuna"
  ],
  "author": "@luis",
  "license": "AGPL-3.0",
  "engines": {
    "node": ">=14.0.0",
    "pnpm": ">=7.0.0"
  },
  "packageManager": "pnpm@7.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/nuna-server.git"
  },
  "bugs": {
    "url": "https://github.com/seu-usuario/nuna-server/issues"
  },
  "homepage": "https://github.com/seu-usuario/nuna-server#readme",
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@faker-js/faker": "8.4.1",
    "@types/node": "22.1.0",
    "tsup": "8.2.4",
    "tsx": "4.17.0",
    "typescript": "5.5.4",
    "drizzle-kit": "^0.24.2"
  },
  "dependencies": {
    "@fastify/cors": "9.0.1",
    "@paralleldrive/cuid2": "2.2.2",
    "dayjs": "1.11.12",
    
    "drizzle-orm": "0.33.0",
    "fastify": "4.28.1",
    "fastify-type-provider-zod": "2.0.0",
    "postgres": "3.4.4",
    "zod": "3.23.8"
  }
}